#!/bin/bash
{{ if and (eq .chezmoi.os "linux") (eq .chezmoi.osRelease.id "ubuntu") }}
sudo apt update
sudo apt install -y \
  aria2 \
  autoconf \
  bat \
  build-essential \
  cmake \
  curl \
  dirmngr \
  fd-find \
  fzf \
  gawk \
  gettext \
  gpg \
  hexyl \
  htop \
  httpie \
  jq \
  libbz2-dev \
  libcurl4-openssl-dev \
  libdb-dev \
  libffi-dev \
  libgdbm-dev \
  liblzma-dev \
  libncursesw5-dev \
  libnotify-bin \
  libreadline-dev \
  libsqlite3-dev \
  libssl-dev \
  libz-dev \
  nmap \
  ripgrep \
  socat \
  tk-dev \
  unzip \
  uuid-dev \
  vim \
  zlib1g-dev

{{ if and (not (.chezmoi.kernel.osrelease | lower | contains "microsoft")) (.chezmoi.requireGUI) }}
# フォントなど独立したLinuxで必要とされるもの
sudo apt install -y \
  fonts-migmix \
  fonts-ipafont-gothic \
  fonts-ipafont-mincho
{{ end }}
[ ! -e "$HOME/.cargo/env" ] && curl https://sh.rustup.rs -sSf | sh
cargo="$HOME/.cargo/bin/cargo"
$cargo install starship --locked
$cargo install lsd
$cargo install hyperfine
$cargo install git-delta

[ ! -x "$HOME/.local/share/rtx/bin/rtx" ] && curl https://rtx.pub/install.sh | sh
rtx="$HOME/.local/share/rtx/bin/rtx"
$rtx use -yg chezmoi
$rtx use -yg git
$rtx use -yg node
$rtx use -yg python
$rtx use -yg rye
$rtx use -yg bitwarden
$rtx use -yg zoxide

git clone https://github.com/joaojacome/bitwarden-ssh-agent.git ~/.bw-ssh-agent
cd ~/.bw-ssh-agent
git checkout 6237a3604d640533ad4123d23e23ddfd4e3666d2 2>&1 > /dev/null
cd $HOME
{{ end }}
