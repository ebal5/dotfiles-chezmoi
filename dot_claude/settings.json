{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/session-start-base-branch.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/stop-hook-git-check.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(bunx @biomejs/biome:*)",
      "Bash(bunx ccmanager:*)",
      "Bash(bunx ccusage:*)",
      "Bash(bunx degit:*)",
      "Bash(bunx difit:*)",
      "Bash(bunx markdownlint-cli2:*)",
      "Bash(bunx npm-check-updates:*)",
      "Bash(bunx serve:*)",
      "Bash(cat:*)",
      "Bash(chmod +x:*)",
      "Bash(date:*)",
      "Bash(docker compose logs:*)",
      "Bash(docker compose ps:*)",
      "Bash(docker image ls:*)",
      "Bash(docker images:*)",
      "Bash(docker inspect:*)",
      "Bash(docker logs:*)",
      "Bash(docker ps:*)",
      "Bash(gh issue edit:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr status)",
      "Bash(gh pr view:*)",
      "Bash(git add:*)",
      "Bash(git add:* && git commit:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git commit:*)",
      "Bash(git diff:*)",
      "Bash(git fetch:*)",
      "Bash(git log:*)",
      "Bash(git merge-base:*)",
      "Bash(git reset:*)",
      "Bash(git stash:*)",
      "Bash(git status:*)",
      "Bash(git switch:*)",
      "Bash(ls:*)",
      "Bash(mkdir -p:*)",
      "Bash(mkdir:*)",
      "Bash(rg:*)",
      "Bash(tree:*)",
      "Bash(uvx bandit:*)",
      "Bash(uvx mypy:*)",
      "Bash(uvx pre-commit run:*)",
      "Bash(uvx ruff:*)",
      "Bash(uvx ty:*)",
      "Skill",
      "WebFetch(domain:docs.anthropic.com)",
      "WebSearch"
    ],
    "deny": [],
    "ask": [
      "Bash(docker compose down:*)",
      "Bash(docker compose up:*)",
      "Bash(gh issue create:*)",
      "Bash(gh label create:*)",
      "Bash(gh pr create:*)",
      "Bash(git merge:*)",
      "Bash(git push:*)"
    ]
  },
  "model": "opus",
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); cwd=$(echo \"$input\" | jq -r '.workspace.current_dir'); user=$(whoami); host=$(hostname -s); dir=$(basename \"$cwd\"); git_branch=\"\"; if cd \"$cwd\" 2>/dev/null && git rev-parse --git-dir > /dev/null 2>&1; then git_branch=$(git --no-optional-locks branch 2>/dev/null | grep '*' | colrm 1 2); [ -n \"$git_branch\" ] && git_branch=\" $git_branch\"; fi; time=$(date +%H:%M:%S); echo \"${user}@${host} ${dir}${git_branch}\"; echo \"${time}\""
  },
  "alwaysThinkingEnabled": true,
  "extraKnownMarketplaces": {
    "anthropic-agent-skills": {
      "source": {
        "source": "github",
        "repo": "anthropics/skills"
      }
    }
  },
  "enabledPlugins": {
    "example-skills@anthropic-agent-skills": true
  }
}
